<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0" metadata-complete="true">
  <display-name>rubylet-ee-external</display-name>
  <context-param>
    <param-name>jrubyHome</param-name>
    <param-value>/ABSOLUTE/PATH/TO/jruby-1.7.1</param-value>
  </context-param>
  <context-param>
    <param-name>appRoot</param-name>
    <param-value>/ABSOLUTE/PATH/TO/rubylet-ee/examples/demo_app/src/main/ruby</param-value>
  </context-param>
  <context-param>
    <param-name>bundleExec</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>boot</param-name>
    <param-value>config/boot.rb</param-value>
  </context-param>
  <context-param>
    <param-name>ServletContextLogger.LEVEL</param-name>
    <param-value>debug</param-value>
  </context-param>
  <listener>
    <listener-class>com.commongroundpublishing.slf4j.impl.ServletContextLoggerSCL</listener-class>
  </listener>
  <listener>
    <listener-class>com.commongroundpublishing.rubylet.ExternalJRubyLoader</listener-class>
  </listener>
  <servlet>
    <servlet-name>rubylet-servlet</servlet-name>
    <servlet-class>com.commongroundpublishing.rubylet.RestartableServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>direct-servlet</servlet-name>
    <servlet-class>com.commongroundpublishing.rubylet.RestartableServlet</servlet-class>
    <init-param>
      <param-name>servletClass</param-name>
      <param-value>Demo::Servlet</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>rubylet-servlet</servlet-name>
    <url-pattern>/rack</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>direct-servlet</servlet-name>
    <url-pattern>/direct</url-pattern>
  </servlet-mapping>
</web-app>
